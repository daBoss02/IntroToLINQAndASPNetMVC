@model IntroToLINQAndASPNetMVC.Models.ViewModels.CompareMoviesVM

@if (Model.Movie1 != null && Model.Movie2 != null)
{    
    <div>
        <table>
            <tr>
                <th width="100px"></th>
                <th width="200px">@Model.Movie1.Title</th>
                <th>@Model.Movie2.Title</th>
            </tr>
            <tr>
                <td>Budget</td>
                <td>@Model.Movie1.BudgetInMillions<span> Million</span></td>
                <td>@Model.Movie2.BudgetInMillions<span> Million</span></td>
            </tr>
            <tr>
                <td>Year</td>
                <td>@Model.Movie1.ReleaseDate.Year</td>
                <td>@Model.Movie2.ReleaseDate.Year</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>@Model.Movie1.Genre</td>
                <td>@Model.Movie2.Genre</td>
            </tr>
        </table>
    </div>
}


<form asp-action="CompareMovies" method="post">
    <select asp-for="MovieId1" asp-items="Model.Movies"></select>
    <select asp-for="MovieId2" asp-items="Model.Movies"></select>
    <input type="submit" value="Compare" />
</form>